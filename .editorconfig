# ====================================================================
# テキストエディタ設定
# ====================================================================
# 起点設定
root = true

# 基本設定
[*]
indent_style = space
indent_size  = 2
charset      = utf-8
trim_trailing_whitespace = true
insert_final_newline     = true

# 文書設定
[*.md]
indent_style = tab
trim_trailing_whitespace = false

# 基本設定
[*.ps1]
indent_style = tab
indent_size  = 4
